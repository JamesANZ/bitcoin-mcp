{
  "name": "@jamesanz/bitcoin-mcp",
  "version": "1.0.1",
  "type": "module",
  "bin": {
    "bitcoin-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "start": "node build/index.js",
    "setup": "node setup.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE.md",
    "setup.js"
  ],
  "main": "build/index.js",
  "keywords": [
    "bitcoin",
    "mcp",
    "model-context-protocol",
    "blockchain",
    "mempool",
